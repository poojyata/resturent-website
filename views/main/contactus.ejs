                <div class="contentv">
                    <h1>Contact Me</h1>
                    <form style="color: whitesmoke;" method="POST" action="/contactus">
                        <label>Your Name :</label>
                        <input type="text" name="rname" class="form-control" pattern="^\D*$" title="Number is not allowed" placeholder="Name" required>
                        <label>Your E-mail :</label>
                        <input type="uemail" name="remail" class="form-control" pattern="^[a-zA-Z_]\w*\w+([.-_]?\w+)*@[a-z]+\.[a-z]+$" placeholder="Email" required>
                        <label>Your message :</label>
                        <textarea placeholder="The Subject" name="rmessage" class="form-control" pattern="^[a-zA-Z_]\w*\w+([.-_]?\w+)*@[a-z]+\.[a-z]+$" placeholder="Message" required></textarea>
                        <input type="submit" value="Done">
                    </form>
                </div>
            </div>

        </div>


